@model MyClass.Models.Product
@{
    ViewBag.Title = ViewBag.Name;
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-md-2">
            <div class="card">
                <b class="card-header">
                    Loại sản phẩm
                </b>
                <ul class="list-group list-group-flush">
                    @Html.Action("_MenuCat", "Module")
                </ul>
            </div>

            <div class="card mt-2 ">
                <b class="card-header">
                    Nhà sản xuất
                </b>
                <ul class="list-group list-group-flush">
                    @Html.Action("_MenuSup", "Module")
                </ul>
            </div>

        </div>
        <div class="col-md-10">
            <div class="col alert alert-danger text-center fs-3 py-0"><i class="fas fa-Phone"></i>  @ViewBag.Name</div>
            <div class="row mb-4">
                <div class="row">
                    <div class="card mb-3">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <img src="~/Public/Images/Product/@Model.Image" class=img-fluid alt="hinSP">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">@Model.Name</h5>
                                    <div>@Model.Detail</div>
                                    <p class="card-text"><span class="text-decoration-line-through">@Model.Price.ToString("#,##0")  VNĐ</span><span class="text-danger">    @Model.PriceSale.ToString("#,##0")  VNĐ</span></p>
                                    <input type="number" class="quantity fs-5"  value="1" name="quantity" min="1" max="5" />
                                    <a href="~/them-gio-hang?productId=@Model.Id&quantity=" id="MuaSP" style="margin-top:-10px" class="btn btn-primary">Add To Cart</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="fs-3 mb-2">Sản phẩm tương tự<hr /></div>
            @Html.Action("_productHome", "Module")
        </div>
    </div>
</div>




